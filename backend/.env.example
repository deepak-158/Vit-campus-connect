# Backend Environment Variables (.env.example)
# Copy this file to backend/.env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database
DATABASE_URL=./database.sqlite

# JWT Secret Key
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=name.regno@vitbhopal.ac.in
EMAIL_PASS=your_app_password
EMAIL_FROM=name.regno@vitbhopal.ac.in

# Frontend URL
CLIENT_URL=https://vit-campus-connect.vercel.app

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://vit-campus-connect-production.up.railway.app/api/auth/google/callback
